<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smartdse2.android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!-- [START gcm_permission] -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- [END gcm_permission] -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/splash_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.facebook.ads.InterstitialAdActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name="com.smartdse2.android.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.smartdse2.android.About"
            android:label="@string/title_activity_about"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.smartdse2.android.DSE30List"
            android:label="@string/title_activity_dse30_list"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.smartdse2.android.Home"
            android:label="@string/title_activity_home"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.smartdse2.android.IPOActivity"
            android:label="@string/title_activity_ipo"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.smartdse2.android.ItemInfo"
            android:label="@string/title_activity_item_info"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.smartdse2.android.NewsActivity"
            android:label="@string/title_activity_news"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.smartdse2.android.Portfolio_activity"
            android:label="@string/title_activity_portfolio_activity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.smartdse2.android.Splash_activity"
            android:label="SmartDSE"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smartdse2.android.Top10Gainers"
            android:label="@string/title_activity_top10_gainers"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.smartdse2.android.Top10Shares"
            android:label="@string/title_activity_top10_shares"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.smartdse2.android.Watch_List_list_view"
            android:label="@string/title_activity_watch__list_list_view"
            android:screenOrientation="portrait" />

        <!-- [START gcm_receiver] -->
        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="gcm.play.android.samples.com.gcmquickstart" />
            </intent-filter>
        </receiver>
        <!-- [END gcm_receiver] -->


        <!-- [START gcm_listener] -->
        <service
            android:name="com.smartdse2.android.MyGcmListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
        <!-- [END gcm_listener] -->
        <!-- [START instanceId_listener] -->
        <service
            android:name="com.smartdse2.android.MyInstanceIDListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>
        <!-- [END instanceId_listener] -->
        <service
            android:name="com.smartdse2.android.RegistrationIntentService"
            android:exported="false" />

        <activity
            android:name="com.smartdse2.android.AGMActivity"
            android:label="@string/title_activity_agm"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.smartdse2.android.NewsDetail"
            android:label="@string/title_activity_news_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.smartdse2.android.Currency"
            android:label="@string/title_activity_currency"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.smartdse2.android.MarketDepth"
            android:label="@string/title_activity_market_depth"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name="com.smartdse2.android.PriceAlertService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name="com.smartdse2.android.PriceAlert"
            android:label="@string/title_activity_price_alert"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.smartdse2.android.ExpertAnalysis"
            android:label="@string/title_activity_expert_analysis"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.smartdse2.android.WeeklyReport"
            android:label="@string/title_activity_weekly_report"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.smartdse2.android.FullScreenGraph"
            android:label="@string/title_activity_full_screen_graph"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
